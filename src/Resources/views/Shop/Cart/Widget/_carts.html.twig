{% import "@SyliusShop/Common/Macro/money.html.twig" as money %}

<div class="row multi-cart-widget">
    {% for cart in carts %}
        {% set isActive = cart.cartNumber == customer.activeCart %}
        <div class="change-cart {% if isActive == true %}active{% endif %}"
                data-url-change="{{ path('bit_bag_sylius_multi_cart_plugin_change_active_cart', { 'cartNumber': cart.cartNumber }) }}"
                data-url-update="{{ path('bit_bag_sylius_multi_cart_plugin_ajax_cart_content') }}">
            
            <div>
                {{- money.convertAndFormat(cart.itemsTotal) -}}
            </div>

            <div class="quantity">
                {{ cart.countItems }}
            </div>
        </div>
    {% endfor %}
</div>
